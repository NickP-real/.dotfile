[user]
	name = NickP-real
	email = nick_narak@rocketmail.com
[credential]
	helper = store
[core]
	autocrlf = input
	editor = nvim
  pager = delta
# define command which will be used when "nvim" is set as a merge tool
[mergetool "nvim"]
  cmd = nvim -f -c \"DiffviewOpen\" 
    ; \"$MERGED\"
# set "nvim" as tool for merging
[merge]
  tool = nvim
	conflictstyle = diff3
# automatically launch merge tool without displaying a prompt
[mergetool]
  prompt = false
	keepBackup = false
[safe]
	directory = *
[color]
	ui = true
[advice]
  addIgnoredFile = false

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true    # use n and N to move between diff sections
  light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)

[diff]
    colorMoved = default
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
# personal account
[url "git@github.com-NickP-real:NickP-real"]
  insteadOf = git@github.com:NickP-real
  pushInsteadOf = git@github.com:NickP-real
# office account
[url "git@github.com-nickp-ss:SmartSoftAsia"]
  insteadOf = git@github.com:SmartSoftAsia
  pushInsteadOf = git@github.com:SmartSoftAsia
[alias]
  config-ssa = !git config user.name nickp-ss && git config user.email nick@smartsoftasia.com
  adog = log --all --decorate --oneline --graph
  adogs = log --all --decorate --oneline --graph --stat
